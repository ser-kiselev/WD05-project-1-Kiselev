extends ../../layouts/ui-layout/ui-layout.pug
include ../../mixins/_nav-mixin.pug

block variables
	- var title = 'Навигация - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
			h1 Навигация
			
			.section-ui
				.container
					.row
						.col-lg-6
							div(style="background: #037EC6; padding: 20px;")
								-
									var navigation = [
											{name: 'Европа', link: '#'},
											{name: 'Азия', link: '#'},
											{name: 'Острова', link: '#'},
											{name: 'Америка', link: '#'},
											{name: 'Африка', link: '#'}
										];

								+navigation(navigation)
			pre.
				+navigation(navigation)
			
			.title mixins/_nav-mixin.pug
			pre.
				mixin navigation(navigation)
					nav.navigation
						ul.navigation-list
							each item in navigation
								li.navigation-list__item
									a(class="navigation-list__item-link" href= item.link)= item.name

			.title sections/navigation.pug
			pre.
				include ../mixins/_nav-mixin.pug

				-
					var navigation = [
							{name: 'Европа', link: '#'},
							{name: 'Азия', link: '#'},
							{name: 'Острова', link: '#'},
							{name: 'Америка', link: '#'},
							{name: 'Африка', link: '#'}
						];

				+navigation(navigation)