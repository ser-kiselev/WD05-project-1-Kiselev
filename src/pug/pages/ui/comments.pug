extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Виджет комментариев - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
			h1 Виджет комментариев
			
			.title sections/comments.pug
			pre.
				.comments

					h2.comments-title Оставить комментарий

					form.comments-form#comments
						
						+textarea("comment", "Я тоже там был, вот мои впечатления.")
						+submit("submit", "Опубликовать")